// Função para exibir o menu principal
void tela_menu_principal(void) {
    char op;
    system("clear||cls");  // Limpa a tela
    printf("=====================================================================\n");
    printf("====  SIG-Pet Um Sistema de Agendamento de Consultas para Pets  =====\n");
    printf("=====================================================================\n");    
    printf("====                       1 - Módulo Clientes                  =====\n");
    printf("====                       2 - Módulo Agendamentos              =====\n");
    printf("====                       3 - Módulo Funcionários              =====\n");
    printf("====                       4 - Módulo Relatório                 =====\n");
    printf("====                       5 - Módulo Informações               =====\n");
    printf("====                       0 - Sair                             =====\n");
    printf("====            Escolha a opção desejada: ");
    scanf(" %c", &op);
    getchar();
    
    switch(op) {
        case '1': tela_modulo_clientes(); break;
        case '2': tela_modulo_agendamentos(); break;
        case '3': tela_modulo_funcionarios(); break;
        case '4': tela_modulo_relatorio(); break;
        case '5': tela_modulo_informacoes(); break;
        case '0': printf("Saindo do sistema...\n"); exit(0); break;
        default: 
            printf("Opção inválida! Tente novamente.\n");
            printf(">>> Tecle <ENTER> para continuar...\n");
            getchar();
            tela_menu_principal(); // Retorna ao menu principal em caso de erro
            break;
    }
}

